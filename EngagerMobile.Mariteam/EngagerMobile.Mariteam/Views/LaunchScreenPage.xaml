<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngagerMobile.Mariteam.Views.LaunchScreenPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="engager_logo.png" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" 
                   WidthRequest="200" HeightRequest="200" Aspect="AspectFit" IsOpaque="True"
                   AbsoluteLayout.LayoutBounds=".5,200,300,300" AbsoluteLayout.LayoutFlags="XProportional"/>

            <Label Text="Mariteam Mobile." VerticalOptions="StartAndExpand" HorizontalOptions="Center" 
                   FontSize="20" TextColor="{StaticResource PrimaryDark}"
                   AbsoluteLayout.LayoutBounds=".5,400,300,300" AbsoluteLayout.LayoutFlags="XProportional"/>

            <Grid AbsoluteLayout.LayoutFlags="All"
                  AbsoluteLayout.LayoutBounds="0,0,1,1" VerticalOptions="EndAndExpand">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Text="&#xf084;  Start Application" VerticalOptions="EndAndExpand" 
                        TextColor="White" Style="{StaticResource PrimaryButton}" BackgroundColor="{StaticResource PrimaryDark}" FontFamily="fa-solid-900.ttf#Font Awesome 5 Free Solid" 
                        Grid.Column="0" Grid.Row="0" 
                        HeightRequest="90" FontSize="25" FontAttributes="Bold"  Clicked="StartButton_OnClicked"/>

            </Grid>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>